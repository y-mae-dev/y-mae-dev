name: Update badges

on:
  schedule:
    # Runs at 2am UTC
    - cron: "0 2 * * *"
jobs:
  update-readme:
    name: Update Readme with badges
    runs-on: ubuntu-latest
    steps:
      - name: Badges - Readme
        uses: y-mae-dev/y-mae-dev-readme@main
        with:       
          CREDLY_USER: d4095b1d # optional, but default will use the same from github
